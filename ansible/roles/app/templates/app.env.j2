{% set app_domain_is_ipv4 = app_domain | regex_search('^\d+\.\d+\.\d+\.\d+$') %}
{% set django_ssl_redirect = (django_secure_ssl_redirect | default(not app_domain_is_ipv4)) | bool %}
DJANGO_SETTINGS_MODULE={{ django_settings_module }}
DJANGO_SECRET_KEY={{ django_secret_key }}
DJANGO_ALLOWED_HOSTS={{ app_domain }},{{ app_public_ip }},localhost,127.0.0.1
DJANGO_ADMIN_URL={{ django_admin_url }}
DJANGO_SECURE_SSL_REDIRECT={{ "True" if django_ssl_redirect else "False" }}
DATABASE_URL=postgres://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port }}/{{ db_name }}
REDIS_URL=redis://redis:6379/0
